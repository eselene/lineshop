{% extends 'base.html.twig' %}

{% block title %}LineShop{% endblock %}

{% block body %}
<h1 class="my-4">LineShop</h1>

<!--categories -->
<div class="mb-4">
    <form action="{{ path('app_main') }}" method="GET">
        <button type="submit" name="category" value="all" class="btn btn-secondary mb-2 mr-2">Toutes les catégories</button>
        {% for categorie in categories %}
            <button type="submit" name="category" value="{{ categorie.id }}" class="btn btn-secondary mb-2 mr-2">{{ categorie.libelle }}</button>
        {% endfor %}
    </form>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <!-- boucle pour les articles -->
        {% for article in articles %}
            <div class="col mb-4">
                <div class="card h-100">
                    <img src="{{ asset('images/' ~ article.image) }}" class="card-img-top" alt="{{ article.description }}">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            {{ article.nom }}
                            <span class="text-success">{{ article.prix }}€</span>
                        </h5>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <button type="button" class="btn btn-warning"><i class="fa-solid fa-gift"></i></button>
                            <h4 class="mb-0">★★★★☆</h4>
                            <a href="{{ path('cart_add', {id: article.id}) }}" class="btn btn-success">+</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
