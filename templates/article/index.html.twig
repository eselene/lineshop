{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1>Article index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Article</th>
				<th>Image</th>
				<th>Prix</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.nom }}</td>
					<td class="col-2"><img src="{{ asset('images/' ~ article.image)}}" alt="{{ article.description }}"></td>
					<td>{{ article.prix }}</td>
					<td>{{ article.description }}</td>
				<td>
					<a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
					<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
				</td>
				</tr>
			</td>
		</tbody>
	{% else %}
		<tr>
			<td colspan="7">no records found</td>
		</tr>
	{% endfor %}
</tbody></table><a href="{{ path('app_article_new') }}">Create new</a>{% endblock %}
