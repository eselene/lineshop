<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}LineShop{% endblock %}
    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
    {% block javascripts %}
    {% block importmap %}
    {{ importmap('app') }}
    {% endblock %}
    {% endblock %}
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('app_main') }}">LineshoP</a>
		<small class="text-light"><em>The best online shop, for real.</em></small>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                </li>
                {% endif %}
				<li class="nav-item">
                <a class="nav-link"href="{{ path('cart_index') }}"><i class="fa-solid fa-cart-shopping"></i></a>
            </li>
            </ul>
        </div>
    </nav>

    <!-- User session -->
    <div class="container-fluid py-3 mt-0 text-center bg-dark">
        <div class="row text-white">
            <div class="col">
                {% if app.user %}
                <div class="mb-3">
                    Welcome {{ app.user.email }}! You can <a href="{{ path('app_logout') }}">Logout</a>.
                </div>
                {% else %}
                <div class="mb-3">
                    User not connected! You can <a href="{{ path('app_login') }}"><span>Login</span></a>.
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="container">
        {% block body %}
        {% endblock %}
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    {% block javascript %}{% endblock %}
</body>

</html>
